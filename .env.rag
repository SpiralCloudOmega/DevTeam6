# Procedural RAG/CAG Configuration
# Retrieval-Augmented Generation with Context-Augmented Generation
# Procedural Memory System

# ===== RAG SETTINGS =====
RAG_ENABLED=true
RAG_MODE=procedural
RAG_PROVIDER=chromadb

# ===== VECTOR DATABASE =====
RAG_VECTOR_DB=chromadb
RAG_VECTOR_DB_PATH=./local-ai/chromadb
RAG_COLLECTION_NAME=devteam6_skills
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Alternative: Qdrant
RAG_USE_QDRANT=false
RAG_QDRANT_HOST=localhost
RAG_QDRANT_PORT=6333
RAG_QDRANT_COLLECTION=skills

# ===== EMBEDDING SETTINGS =====
RAG_EMBEDDING_DIMENSION=384
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_MAX_CHUNKS_PER_DOC=100

# ===== RETRIEVAL SETTINGS =====
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_RERANK_RESULTS=true
RAG_RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ===== CAG (Context-Augmented Generation) =====
CAG_ENABLED=true
CAG_CONTEXT_WINDOW=100000
CAG_DYNAMIC_CONTEXT=true
CAG_CONTEXT_PRIORITY=relevance

# ===== PROCEDURAL MEMORY =====
PROCEDURAL_MEMORY_ENABLED=true
PROCEDURAL_MEMORY_PATH=./local-ai/memory/procedural
PROCEDURAL_MEMORY_MAX_SIZE=10GB

# Memory types
MEMORY_ENABLE_SKILLS=true
MEMORY_ENABLE_PATTERNS=true
MEMORY_ENABLE_WORKFLOWS=true
MEMORY_ENABLE_DEPENDENCIES=true

# ===== SKILL CACHING =====
# Heavy data stored as skills (no token cost)
SKILL_CACHE_ENABLED=true
SKILL_CACHE_PATH=./skills/cache
SKILL_CACHE_MAX_SIZE=50GB
SKILL_CACHE_TTL=604800

# Cache categories
CACHE_CODE_TEMPLATES=true
CACHE_DEPENDENCIES=true
CACHE_DOCUMENTATION=true
CACHE_PATTERNS=true
CACHE_BENCHMARKS=true

# ===== TOKEN OPTIMIZATION =====
RAG_REDUCE_CONTEXT_SIZE=true
RAG_SUMMARIZE_LONG_DOCS=true
RAG_USE_METADATA_FILTERS=true
RAG_COMPRESS_EMBEDDINGS=false

# ===== PERFORMANCE =====
RAG_BATCH_SIZE=32
RAG_NUM_WORKERS=4
RAG_CACHE_EMBEDDINGS=true
RAG_ASYNC_INDEXING=true

# ===== INTEGRATION =====
RAG_GEMINI_INTEGRATION=true
RAG_JULES_INTEGRATION=true
RAG_CONDUCTOR_INTEGRATION=true
RAG_MCP_INTEGRATION=true

# ===== LOGGING =====
RAG_LOG_LEVEL=INFO
RAG_LOG_PATH=./logs/rag.log
RAG_METRICS_ENABLED=true
