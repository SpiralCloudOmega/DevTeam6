# Google Gemini Conductor Configuration
# Master Planner and Orchestration System
# Reference: GitHub Gemini Conductor

# ===== CONDUCTOR SETTINGS =====
CONDUCTOR_ENABLED=true
CONDUCTOR_MODE=master_planner
CONDUCTOR_VERSION=latest

# ===== PLANNING CAPABILITIES =====
CONDUCTOR_ENABLE_SPEC_KIT=true
CONDUCTOR_ENABLE_PLANNING_FILES=true
CONDUCTOR_PLANNING_STRATEGY=procedural

# Integration with OthmanAdi/planning-with-files
CONDUCTOR_PLANNING_FILES_REPO=https://github.com/OthmanAdi/planning-with-files
CONDUCTOR_PLANNING_FILES_PATH=./integrations/planning-with-files

# ===== ORCHESTRATION =====
CONDUCTOR_MAX_AGENTS=10
CONDUCTOR_COORDINATION_MODE=hierarchical
CONDUCTOR_TASK_DISTRIBUTION=auto
CONDUCTOR_LOAD_BALANCING=true

# ===== WORKFLOW MANAGEMENT =====
CONDUCTOR_WORKFLOW_ENGINE=gemini
CONDUCTOR_STATE_PERSISTENCE=true
CONDUCTOR_STATE_PATH=./state/conductor
CONDUCTOR_CHECKPOINT_INTERVAL=300

# ===== AGENT COORDINATION =====
CONDUCTOR_JULES_INTEGRATION=true
CONDUCTOR_MCP_INTEGRATION=true
CONDUCTOR_CONTEXT7_SYNC=true

# ===== PLANNING OPTIMIZATION =====
# Use RAG for planning to reduce token costs
CONDUCTOR_USE_RAG=true
CONDUCTOR_RAG_ENDPOINT=http://localhost:8000/rag
CONDUCTOR_CACHE_PLANS=true
CONDUCTOR_PLAN_CACHE_PATH=./skills/plans

# ===== SPEC-KIT INTEGRATION =====
# GitHub Spec-Kit for executable specifications
CONDUCTOR_SPEC_KIT_ENABLED=true
CONDUCTOR_SPEC_KIT_PATH=./integrations/spec-kit
CONDUCTOR_AUTO_GENERATE_SPECS=true
CONDUCTOR_SPEC_VALIDATION=true

# ===== PERFORMANCE =====
CONDUCTOR_MAX_PARALLEL_TASKS=8
CONDUCTOR_TASK_TIMEOUT=3600
CONDUCTOR_RETRY_FAILED_TASKS=true
CONDUCTOR_MAX_RETRIES=3

# ===== LOGGING =====
CONDUCTOR_LOG_LEVEL=INFO
CONDUCTOR_LOG_PATH=./logs/conductor.log
CONDUCTOR_AUDIT_LOG=true
CONDUCTOR_METRICS_ENABLED=true
