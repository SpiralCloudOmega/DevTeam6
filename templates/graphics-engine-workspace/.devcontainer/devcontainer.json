{
  "name": "Graphics Engine / Vulkan Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "llvm-vs-code-extensions.vscode-clangd",
        "twxs.cmake",
        "slevesque.shader"
      ],
      "settings": {
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
        "cmake.configureOnOpen": true,
        "files.associations": {
          "*.vert": "glsl",
          "*.frag": "glsl",
          "*.comp": "glsl"
        }
      }
    }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "echo 'Graphics Engine Development Environment Ready! Vulkan SDK installed.'",
  "remoteUser": "vscode"
}
