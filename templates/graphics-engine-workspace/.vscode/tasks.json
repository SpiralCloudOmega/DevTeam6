{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": ["-B", "build", "-DCMAKE_BUILD_TYPE=Release", "-G", "Ninja"],
      "group": "build",
      "problemMatcher": [],
      "detail": "Configure CMake project with Vulkan"
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["CMake: Configure"],
      "detail": "Build graphics engine and compile shaders"
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--target", "clean"],
      "group": "build",
      "problemMatcher": [],
      "detail": "Clean build artifacts"
    },
    {
      "label": "Run: Graphics Engine",
      "type": "shell",
      "command": "./build/graphics-engine",
      "group": "none",
      "dependsOn": ["CMake: Build"],
      "problemMatcher": [],
      "detail": "Run the graphics engine"
    },
    {
      "label": "Compile Shaders",
      "type": "shell",
      "command": "glslc",
      "args": [
        "shaders/shader.vert",
        "-o",
        "build/shaders/shader.vert.spv"
      ],
      "group": "build",
      "problemMatcher": [],
      "detail": "Manually compile GLSL shaders to SPIR-V"
    }
  ]
}
